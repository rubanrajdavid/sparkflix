<h3 style="margin-top: 20px;">
    <div>
        <a href="http://{{ipAddress}}/screens">
            <center>
                <b>
                    {{details.movieName}}
                </b>
            </center>
        </a>
    </div>
</h3>
<hr>
<div class="container">
    {{#if message}}
    <div id="videoPlayer">
        <center>
            <h1>
                {{message}}
            </h1>
        </center>
    </div>
    {{else}}
    <div class="videoPlayer" id="videoPlayer" onmousemove="controlsVisiblityOn()">
        <video class="video" id="video" onclick="togglePlayPause()"
            src="http://{{ipAddress}}/moviestream/{{details.movieID}}">
            <track src="/assets/subtitles/{{details.movieID}}.vtt" kind="subtitles" srclang="en" label="English"
                default />
        </video>
        <div class="controls" id="controls">
            <div class="bar">
                <input type="range" id="videoSeeker" class="bar" min="0" max="100" value="0.1" step="1">
            </div>
            <div class="buttons">
                <button class="pp" id="play-pause"></button>
                <button class="unmute" id="volumeMute"></button>
                <a class="-10s" id="-10s">
                    <i class="fa fa-fast-backward" aria-hidden="true"></i>
                </a>
                &nbsp;
                &nbsp;
                &nbsp;
                <a class="+10s" id="+10s">
                    <i class="fa fa-fast-forward" aria-hidden="true"></i>
                </a>
                &nbsp;
                &nbsp;
                <input type="range" id="volumeSlider" min="0" max="100" value="20" step="1">&nbsp;
                {{!-- &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp; --}}
                <a class="sync" id="sync">
                    <i class="fa fa-refresh" aria-hidden="true"></i>
                </a>
                &emsp;
                <a class="lightsOff" id="lightsOff">
                    <i class="fa fa-lightbulb-o" aria-hidden="true"></i>
                </a>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <p id="duration"></p>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <a href="#" id="fullScreen" onclick="toggleFullscreen()">
                    <i class="fa fa-expand" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
    {{/if}}
</div>
<script defer>
    var screenID = {{ details.screenID }}
</script>
<script src='/socket.io/socket.io.js' defer></script>
<script src="/assets/scripts/screenStream.js" defer></script>